<view class="page">
  <view>
    <view class="swiper">
      <swiper 
        indicator-dots="{{indicatorDots}}" 
        vertical="{{vertical}}"
        autoplay="{{autoplay}}" 
        interval="{{interval}}" 
        duration="{{duration}}"
        style="height: {{swiperHeight}}px">
        <block wx:for="{{imgUrls}}">
          <swiper-item class="swiper-box">
            <image src="{{item}}" class="swiper-item" mode="widthFix" bindtap="back"></image>
          </swiper-item>
          <view class="content" >
            <text class="text">{{content}}</text>
          </view>
        </block>
      </swiper>
    </view>
  </view>
</view>
